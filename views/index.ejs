<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>

    <main>
      <article class="carrousel">
        <img src="images/carrousel1.jpeg" alt="carrousel" />
      </article>

      <section class="cards">
        <h2>Marcas</h2>
        <% brands.forEach(brand => { %>
        <div class="card">
          <div class="brandImg">
            <% if (brand.image) { %>
            <img
              src="images/brands/<%= brand.image %>"
              alt="<%= brand.nameBrand %>"
            />
            <% } else { %>
            <img
              src="images/brands/defaultBrand.png"
              alt="Default Image"
            />
            <% } %>
          </div>
          <div class="titleProduct"><%= brand.nameBrand %></div>
        </div>
        <% }) %>
      </section>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
