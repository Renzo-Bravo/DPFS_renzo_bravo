<!DOCTYPE html>
<html lang="en">

<%- include('../partials/headUsers') %>

<body>

    <%- include('../partials/headerLogAndReg', { link: 'login', texto: 'Login' }) %>
    
    <main>
        <section class="formulary">
            <form action="url" method="get">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" placeholder="Nombre" required>
                
                <label for="surname">Apellido:</label>
                <input type="text" id="surname" name="surname" placeholder="Apellido" required>
                
                <label for="date">Fecha de nacimiento:</label>
                <input type="date" id="date" name="date" required>
                
                <label for="select">Género</label>
                <select name="select" id="select">
                    <option value="">Seleccionar</option>
                    <option value="1">Otro</option>
                    <option value="2">Masculino</option>
                    <option value="3">Femenino</option>
                </select>

                <label for="email">Correo electrónico:</label>
                <input type="email" id="email" name="email" placeholder="Correo electrónico" required>

                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Contraseña" required>

                <div class="check">
                    <input type="checkbox" id="checkbox" name="checkbox" required>
                    <label for="checkbox" class="conditions">Aceptar terminos y condiciones</label>
                </div>
                
                <div class="sub">
                    <button type="submit" id="input">Registrarse</button>
                </div>
            </form>
        </section>
    </main>
</body>
</html>
