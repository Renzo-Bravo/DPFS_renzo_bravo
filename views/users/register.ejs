<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/headUsers') %>

  <body>
    <%- include('../partials/headerLogAndReg', { link: 'login', texto: 'Login'
    }) %>

    <main>
      <div class="logo">
        <img src="/images/MoviGo.png" alt="Logo" />
      </div>

      <section class="formulary">

        <form action="/users/register" method="post" enctype="multipart/form-data">
          <label for="name">Nombre:</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Nombre"
            required
          />
          
          <label for="image">Foto de perfil:</label>
          <input type="file" class="image" id="image" name="profile" accept="image/*" />

          <label for="surname">Apellido:</label>
          <input
            type="text"
            id="surname"
            name="surname"
            placeholder="Apellido"
            required
          />

          <label for="date">Fecha de nacimiento:</label>
          <input type="date" id="date" name="date" required />

          <label for="gender">Género</label>
          <select name="gender" id="select">
            <option value="">Seleccionar</option>
            <option value="otro">Otro</option>
            <option value="male">Masculino</option>
            <option value="female">Femenino</option>
          </select>
          
          <label for="rol">Rol</label>
          <select name="rol" id="select">
            <option value="">Seleccionar</option>
            <option value="admin">Admin</option>
            <option value="test">Test</option>
            <option value="user">Usuario</option>
          </select>

          <label for="email">Correo electrónico:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Correo electrónico"
            required
          />

          <label for="password">Contraseña:</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Contraseña"
            required
          />

          <div class="check">
            <input type="checkbox" id="checkbox" name="checkbox" required />
            <label for="checkbox" class="conditions"
              >Aceptar terminos y condiciones</label
            >
          </div>

          <div class="sub">
            <button type="submit" id="input">Registrarse</button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
