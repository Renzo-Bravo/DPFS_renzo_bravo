<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/headUsers') %>

  <body>
    <%- include('../partials/headerLogAndReg', { link: '../users/register' ,
    texto: 'Registrarse' }) %>

    <main>
      <div class="logo">
        <img src="/images/MoviGo.png" alt="Logo" />
      </div>

      <section class="formulary">
        <form action="/users/login" method="post">
          <label for="email">Correo electrónico:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Correo electrónico"
            required
          />

          <label for="password">Contraseña:</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Contraseña"
            required
          />

          <div class="check">
            <input type="checkbox" id="checkbox" name="rememberMe"/>
            <label for="checkbox" class="conditions"
              >Guardar sesión</label
            >
          </div>


          <a href="url">¿Has olvidado la contraseña?</a>

          <div class="sub">
            <button type="submit" id="input">Iniciar sesión</button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
